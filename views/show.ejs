<%- include("./partials/header")%>
<div class="ui main text container ">
    <div id="show" class="ui huge header "></div>
    <p></p>
    <h1 id="text"><%=site.title%></h1> <u></u>
    <div class="ui top attached segment">
        <div class="item">
            <img class="ui centered rounded image" src="<%=site.image%>" alt="">
            <div class="content">
                <span><%=site.date.toDateString()%></span>
            </div>
            <div class="description">
                <p><%-site.body%></p>
            </div>
            <a class="ui blue inverted small button" href="/site/<%=site._id%>/edit">Edit</a>
            <form id="delete" action="/site/<%=site._id%>?_method=DELETE" method="POST">
                <button class="ui orange inverted button">Delete</button>
            </form>
        </div>
    </div> 
</div>

<%- include("./partials/footer")%>